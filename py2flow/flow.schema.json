{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://prepbench.dev/schemas/py2flow/flow.schema.json",
  "title": "PrepBench py2flow DAG Schema",
  "type": "object",
  "required": [
    "id",
    "name",
    "nodes"
  ],
  "additionalProperties": false,
  "properties": {
    "id": {
      "type": "string",
      "minLength": 1
    },
    "name": {
      "type": "string",
      "minLength": 1
    },
    "version": {
      "type": "string"
    },
    "nodes": {
      "type": "object",
      "minProperties": 1,
      "patternProperties": {
        "^[A-Za-z_][A-Za-z0-9_\\-]*$": {
          "$ref": "#/$defs/node"
        }
      },
      "additionalProperties": false
    }
  },
  "$defs": {
    "string_array": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "single_char": {
      "type": "string",
      "minLength": 1,
      "maxLength": 1
    },
    "sort_item": {
      "type": "object",
      "required": [
        "expr"
      ],
      "additionalProperties": false,
      "properties": {
        "expr": {
          "type": "string",
          "minLength": 1
        },
        "asc": {
          "type": "boolean"
        },
        "nulls": {
          "type": "string",
          "enum": [
            "first",
            "last"
          ]
        }
      }
    },
    "empty_inputs": {
      "type": "object",
      "maxProperties": 0,
      "additionalProperties": false
    },
    "unary_inputs": {
      "type": "object",
      "required": [
        "in"
      ],
      "additionalProperties": false,
      "properties": {
        "in": {
          "type": "string",
          "minLength": 1
        }
      }
    },
    "join_inputs": {
      "type": "object",
      "required": [
        "left",
        "right"
      ],
      "additionalProperties": false,
      "properties": {
        "left": {
          "type": "string",
          "minLength": 1
        },
        "right": {
          "type": "string",
          "minLength": 1
        }
      }
    },
    "union_inputs": {
      "type": "object",
      "required": [
        "items"
      ],
      "additionalProperties": false,
      "properties": {
        "items": {
          "type": "array",
          "minItems": 2,
          "items": {
            "type": "string",
            "minLength": 1
          }
        }
      }
    },
    "input_params": {
      "type": "object",
      "additionalProperties": false,
      "patternProperties": {
        "^_": {}
      },
      "properties": {
        "path": {
          "type": "string",
          "minLength": 1
        },
        "mode": {
          "type": "string",
          "enum": [
            "csv",
            "line"
          ]
        },
        "delimiter": {
          "type": "string"
        },
        "encoding": {
          "oneOf": [
            {
              "type": "string",
              "minLength": 1
            },
            {
              "type": "array",
              "minItems": 1,
              "items": {
                "type": "string",
                "minLength": 1
              }
            }
          ]
        },
        "na_values": {
          "$ref": "#/$defs/string_array"
        },
        "keep_default_na": {
          "type": "boolean"
        },
        "parse_dates": {
          "$ref": "#/$defs/string_array"
        },
        "dtype": {
          "type": "object",
          "additionalProperties": {
            "type": "string",
            "minLength": 1
          }
        },
        "skiprows": {
          "type": "integer",
          "minimum": 0
        },
        "header": {
          "oneOf": [
            {
              "type": "integer"
            },
            {
              "type": "array",
              "items": {
                "type": "integer"
              }
            },
            {
              "type": "null"
            }
          ]
        },
        "on_bad_lines": {
          "type": "string",
          "enum": [
            "error",
            "warn",
            "skip"
          ]
        },
        "quotechar": {
          "$ref": "#/$defs/single_char"
        },
        "escapechar": {
          "$ref": "#/$defs/single_char"
        },
        "data": {
          "oneOf": [
            {
              "type": "array"
            },
            {
              "type": "object"
            }
          ]
        },
        "source_type": {
          "type": "string",
          "enum": [
            "inline"
          ]
        }
      },
      "anyOf": [
        {
          "required": [
            "path"
          ]
        },
        {
          "required": [
            "data"
          ]
        }
      ]
    },
    "project_params": {
      "type": "object",
      "additionalProperties": false,
      "patternProperties": {
        "^_": {}
      },
      "properties": {
        "select": {
          "$ref": "#/$defs/string_array"
        },
        "rename": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          }
        },
        "compute": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "as",
              "expr"
            ],
            "additionalProperties": false,
            "properties": {
              "as": {
                "type": "string",
                "minLength": 1
              },
              "expr": {
                "type": "string",
                "minLength": 1
              }
            }
          }
        },
        "cast": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "col",
              "dtype"
            ],
            "additionalProperties": false,
            "properties": {
              "col": {
                "type": "string",
                "minLength": 1
              },
              "dtype": {
                "type": "string",
                "enum": [
                  "string",
                  "int64",
                  "float64",
                  "bool",
                  "datetime64[ns]"
                ]
              },
              "errors": {
                "type": "string",
                "enum": [
                  "raise",
                  "null"
                ]
              }
            }
          }
        },
        "map": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "col",
              "op"
            ],
            "additionalProperties": false,
            "properties": {
              "col": {
                "type": "string",
                "minLength": 1
              },
              "op": {
                "type": "string",
                "minLength": 1
              },
              "args": {
                "type": "object"
              },
              "when": {
                "type": "string"
              }
            }
          }
        },
        "expand": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "keys",
              "from_col"
            ],
            "additionalProperties": false,
            "properties": {
              "keys": {
                "$ref": "#/$defs/string_array"
              },
              "from_col": {
                "type": "string",
                "minLength": 1
              },
              "expand_col": {
                "type": "string",
                "minLength": 1
              },
              "keep_from_col": {
                "type": "boolean"
              },
              "to_col": {
                "type": "string"
              },
              "to_value": {},
              "to_value_expr": {
                "type": "string"
              }
            },
            "oneOf": [
              {
                "required": [
                  "to_col"
                ]
              },
              {
                "required": [
                  "to_value"
                ]
              },
              {
                "required": [
                  "to_value_expr"
                ]
              }
            ]
          }
        },
        "on_error": {
          "type": "string",
          "enum": [
            "keep",
            "null",
            "error",
            "tag"
          ]
        },
        "error_cols": {
          "$ref": "#/$defs/string_array"
        }
      }
    },
    "filter_params": {
      "type": "object",
      "required": [
        "predicate"
      ],
      "additionalProperties": false,
      "patternProperties": {
        "^_": {}
      },
      "properties": {
        "predicate": {
          "type": "string",
          "minLength": 1
        },
        "null_as_false": {
          "type": "boolean"
        }
      }
    },
    "join_params": {
      "type": "object",
      "additionalProperties": false,
      "patternProperties": {
        "^_": {}
      },
      "properties": {
        "how": {
          "type": "string",
          "enum": [
            "inner",
            "left",
            "right",
            "full",
            "semi",
            "anti"
          ]
        },
        "on": {
          "$ref": "#/$defs/string_array"
        },
        "left_on": {
          "$ref": "#/$defs/string_array"
        },
        "right_on": {
          "$ref": "#/$defs/string_array"
        },
        "null_equal": {
          "type": "boolean"
        },
        "suffixes": {
          "type": "array",
          "minItems": 2,
          "maxItems": 2,
          "items": {
            "type": "string"
          }
        },
        "select_left": {
          "$ref": "#/$defs/string_array"
        },
        "select_right": {
          "$ref": "#/$defs/string_array"
        },
        "validate": {
          "type": "object",
          "required": [
            "mode"
          ],
          "additionalProperties": false,
          "properties": {
            "mode": {
              "type": "string",
              "enum": [
                "1:1",
                "1:m",
                "m:1",
                "m:m"
              ]
            },
            "on_fail": {
              "type": "string",
              "enum": [
                "error",
                "tag"
              ]
            },
            "error_col": {
              "type": "string"
            }
          }
        },
        "fuzzy_match": {
          "type": "boolean"
        }
      },
      "oneOf": [
        {
          "required": [
            "on"
          ]
        },
        {
          "required": [
            "left_on",
            "right_on"
          ]
        }
      ]
    },
    "union_params": {
      "type": "object",
      "required": [
        "distinct"
      ],
      "additionalProperties": false,
      "patternProperties": {
        "^_": {}
      },
      "properties": {
        "distinct": {
          "type": "boolean"
        },
        "align": {
          "type": "string",
          "enum": [
            "by_name"
          ]
        },
        "fill_missing": {
          "type": "string",
          "enum": [
            "null",
            "error"
          ]
        },
        "type_coerce": {
          "type": "string",
          "enum": [
            "error"
          ]
        }
      }
    },
    "aggregate_params": {
      "type": "object",
      "required": [
        "aggs"
      ],
      "additionalProperties": false,
      "patternProperties": {
        "^_": {}
      },
      "properties": {
        "group_keys": {
          "$ref": "#/$defs/string_array"
        },
        "aggs": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "required": [
              "as",
              "func"
            ],
            "additionalProperties": false,
            "properties": {
              "as": {
                "type": "string",
                "minLength": 1
              },
              "func": {
                "type": "string",
                "enum": [
                  "sum",
                  "count",
                  "min",
                  "max",
                  "avg",
                  "count_distinct",
                  "prod"
                ]
              },
              "expr": {
                "type": "string"
              },
              "distinct": {
                "type": "boolean"
              }
            }
          }
        },
        "having": {
          "type": "string"
        },
        "null_group": {
          "type": "boolean"
        }
      }
    },
    "dedup_params": {
      "type": "object",
      "additionalProperties": false,
      "patternProperties": {
        "^_": {}
      },
      "properties": {
        "keys": {
          "oneOf": [
            {
              "$ref": "#/$defs/string_array"
            },
            {
              "type": "null"
            }
          ]
        },
        "output": {
          "type": "string",
          "enum": [
            "all_cols",
            "keys_only"
          ]
        },
        "keep": {
          "type": "string",
          "enum": [
            "first",
            "last",
            "none"
          ]
        },
        "order_by": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/sort_item"
          }
        }
      }
    },
    "sort_params": {
      "type": "object",
      "required": [
        "order_by"
      ],
      "additionalProperties": false,
      "patternProperties": {
        "^_": {}
      },
      "properties": {
        "order_by": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "#/$defs/sort_item"
          }
        },
        "stable": {
          "type": "boolean"
        },
        "limit": {
          "type": "integer",
          "minimum": 0
        },
        "partition_by": {
          "$ref": "#/$defs/string_array"
        },
        "limit_per_group": {
          "type": "integer",
          "minimum": 0
        }
      }
    },
    "pivot_params": {
      "type": "object",
      "required": [
        "mode"
      ],
      "additionalProperties": false,
      "patternProperties": {
        "^_": {}
      },
      "properties": {
        "mode": {
          "type": "string",
          "enum": [
            "pivot_wider",
            "pivot_longer",
            "pivot_longer_from_rows",
            "pivot_longer_paired"
          ]
        },
        "id_cols": {
          "$ref": "#/$defs/string_array"
        },
        "value_vars": {
          "$ref": "#/$defs/string_array"
        },
        "names_to": {
          "type": "string"
        },
        "values_to": {
          "type": "string"
        },
        "index": {
          "$ref": "#/$defs/string_array"
        },
        "columns": {
          "$ref": "#/$defs/string_array"
        },
        "values": {
          "$ref": "#/$defs/string_array"
        },
        "agg": {
          "type": "string",
          "enum": [
            "sum",
            "count",
            "min",
            "max",
            "avg"
          ]
        },
        "fill_value": {},
        "row_key_pattern": {
          "$ref": "#/$defs/string_array"
        },
        "column_pattern": {
          "$ref": "#/$defs/string_array"
        },
        "data_offset": {
          "type": "integer",
          "minimum": 0
        },
        "drop_contains": {
          "$ref": "#/$defs/string_array"
        },
        "numeric_fields": {
          "$ref": "#/$defs/string_array"
        },
        "key_row": {
          "type": "integer",
          "minimum": 0
        },
        "pair_size": {
          "type": "integer",
          "minimum": 1
        },
        "key_col_offset": {
          "type": "integer",
          "minimum": 0
        },
        "value_cols": {
          "$ref": "#/$defs/string_array"
        },
        "key_col": {
          "type": "string"
        },
        "skip_empty_keys": {
          "type": "boolean"
        },
        "skip_cols": {
          "type": "integer",
          "minimum": 0
        }
      }
    },
    "output_params": {
      "type": "object",
      "required": [
        "path"
      ],
      "additionalProperties": false,
      "patternProperties": {
        "^_": {}
      },
      "properties": {
        "path": {
          "type": "string",
          "minLength": 1
        },
        "write_order": {
          "type": "boolean"
        },
        "schema_enforce": {
          "type": "boolean"
        },
        "schema": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "columns": {
              "$ref": "#/$defs/string_array"
            },
            "order": {
              "$ref": "#/$defs/string_array"
            },
            "dtype": {
              "type": "object",
              "additionalProperties": {
                "type": "string"
              }
            }
          }
        },
        "datetime_format": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          }
        },
        "encoding": {
          "type": "string"
        },
        "lineterminator": {
          "type": "string"
        }
      }
    },
    "script_params": {
      "type": "object",
      "required": [
        "inline_code"
      ],
      "additionalProperties": false,
      "patternProperties": {
        "^_": {}
      },
      "properties": {
        "deterministic": {
          "type": "boolean"
        },
        "side_effects": {
          "type": "boolean"
        },
        "inline_code": {
          "type": "string",
          "minLength": 1
        }
      }
    },
    "node_common_props": {
      "type": "object",
      "properties": {
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        }
      }
    },
    "input_node": {
      "type": "object",
      "required": [
        "kind",
        "inputs"
      ],
      "additionalProperties": false,
      "properties": {
        "kind": {
          "const": "input"
        },
        "inputs": {
          "$ref": "#/$defs/empty_inputs"
        },
        "params": {
          "$ref": "#/$defs/input_params"
        },
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        }
      }
    },
    "project_node": {
      "type": "object",
      "required": [
        "kind",
        "inputs"
      ],
      "additionalProperties": false,
      "properties": {
        "kind": {
          "const": "project"
        },
        "inputs": {
          "$ref": "#/$defs/unary_inputs"
        },
        "params": {
          "$ref": "#/$defs/project_params"
        },
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        }
      }
    },
    "filter_node": {
      "type": "object",
      "required": [
        "kind",
        "inputs",
        "params"
      ],
      "additionalProperties": false,
      "properties": {
        "kind": {
          "const": "filter"
        },
        "inputs": {
          "$ref": "#/$defs/unary_inputs"
        },
        "params": {
          "$ref": "#/$defs/filter_params"
        },
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        }
      }
    },
    "join_node": {
      "type": "object",
      "required": [
        "kind",
        "inputs"
      ],
      "additionalProperties": false,
      "properties": {
        "kind": {
          "const": "join"
        },
        "inputs": {
          "$ref": "#/$defs/join_inputs"
        },
        "params": {
          "$ref": "#/$defs/join_params"
        },
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        }
      }
    },
    "union_node": {
      "type": "object",
      "required": [
        "kind",
        "inputs",
        "params"
      ],
      "additionalProperties": false,
      "properties": {
        "kind": {
          "const": "union"
        },
        "inputs": {
          "$ref": "#/$defs/union_inputs"
        },
        "params": {
          "$ref": "#/$defs/union_params"
        },
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        }
      }
    },
    "aggregate_node": {
      "type": "object",
      "required": [
        "kind",
        "inputs",
        "params"
      ],
      "additionalProperties": false,
      "properties": {
        "kind": {
          "const": "aggregate"
        },
        "inputs": {
          "$ref": "#/$defs/unary_inputs"
        },
        "params": {
          "$ref": "#/$defs/aggregate_params"
        },
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        }
      }
    },
    "dedup_node": {
      "type": "object",
      "required": [
        "kind",
        "inputs"
      ],
      "additionalProperties": false,
      "properties": {
        "kind": {
          "const": "dedup"
        },
        "inputs": {
          "$ref": "#/$defs/unary_inputs"
        },
        "params": {
          "$ref": "#/$defs/dedup_params"
        },
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        }
      }
    },
    "sort_node": {
      "type": "object",
      "required": [
        "kind",
        "inputs",
        "params"
      ],
      "additionalProperties": false,
      "properties": {
        "kind": {
          "const": "sort"
        },
        "inputs": {
          "$ref": "#/$defs/unary_inputs"
        },
        "params": {
          "$ref": "#/$defs/sort_params"
        },
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        }
      }
    },
    "pivot_node": {
      "type": "object",
      "required": [
        "kind",
        "inputs",
        "params"
      ],
      "additionalProperties": false,
      "properties": {
        "kind": {
          "const": "pivot"
        },
        "inputs": {
          "$ref": "#/$defs/unary_inputs"
        },
        "params": {
          "$ref": "#/$defs/pivot_params"
        },
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        }
      }
    },
    "output_node": {
      "type": "object",
      "required": [
        "kind",
        "inputs",
        "params"
      ],
      "additionalProperties": false,
      "properties": {
        "kind": {
          "const": "output"
        },
        "inputs": {
          "$ref": "#/$defs/unary_inputs"
        },
        "params": {
          "$ref": "#/$defs/output_params"
        },
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        }
      }
    },
    "script_node": {
      "type": "object",
      "required": [
        "kind",
        "inputs",
        "params"
      ],
      "additionalProperties": false,
      "properties": {
        "kind": {
          "const": "script"
        },
        "inputs": {
          "$ref": "#/$defs/unary_inputs"
        },
        "params": {
          "$ref": "#/$defs/script_params"
        },
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        }
      }
    },
    "node": {
      "oneOf": [
        {
          "$ref": "#/$defs/input_node"
        },
        {
          "$ref": "#/$defs/project_node"
        },
        {
          "$ref": "#/$defs/filter_node"
        },
        {
          "$ref": "#/$defs/join_node"
